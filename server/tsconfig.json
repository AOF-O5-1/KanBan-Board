{
  "extends": "../tsconfig.json",
  "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "target": "ES2020",
      "module": "ESNext",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
  },
  "include": ["src"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}